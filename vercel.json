{
  "version": 2,
  "devCommand": "npm run dev --prefix mi-frontend",
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "mi-backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "mi-backend/index.js"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "mi-frontend/dist/index.html"
    }
  ]
}
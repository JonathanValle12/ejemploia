{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "mi-backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/mi-backend/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)",      "dest": "/index.html" }
  ]
}
{
  "version": 2,
  "builds": [
    { "src": "mi-frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "mi-backend/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
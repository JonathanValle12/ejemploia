{
  "version": 2,
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "mi-frontend/dist"
      }
    },
    {
      "src": "mi-backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "mi-backend/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "mi-backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "mi-frontend/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/mi-backend/index.js"
    }
  ]
}
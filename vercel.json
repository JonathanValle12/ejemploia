{
  "version": 2,
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "mi-backend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "mi-backend/src/**"
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
{
  "builds": [
    {
      "src": "mi-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "mi-frontend/dist" }
    },
    {
      "src": "mi-backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/mi-backend/index.js" },
    { "source": "/(.*)",       "destination": "/index.html" }
  ]
}